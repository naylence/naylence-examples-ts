{
  "name": "@naylence-examples/distributed-hello-with-sentinel",
  "version": "0.1.0",
  "description": "Distributed hello example with separate sentinel node",
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "build": "tsc && npm run rename-to-mjs && npm run fix-imports",
    "rename-to-mjs": "find dist -name '*.js' -exec sh -c 'mv \"$1\" \"${1%.js}.mjs\"' _ {} \\;",
    "fix-imports": "find dist -name '*.mjs' -exec sed -i '' 's/\\.js/\\.mjs/g' {} \\;",
    "clean": "rm -rf dist",
    "start:sentinel": "npm run build && node dist/sentinel.mjs",
    "start:agent": "npm run build && node dist/echo-agent.mjs",
    "start:client": "npm run build && node dist/client.mjs"
  },
  "dependencies": {
    "@naylence/agent-sdk": "^0.3.3"
  },
  "devDependencies": {
    "typescript": "^5.7.3",
    "@types/node": "^22.10.2"
  }
}

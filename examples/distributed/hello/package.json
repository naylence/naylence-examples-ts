{
  "name": "distributed-hello-example",
  "version": "1.0.0",
  "description": "Naylence distributed hello example using TypeScript",
  "license": "Apache-2.0",
  "type": "module",
  "main": "dist/echo-agent.mjs",
  "scripts": {
    "build": "tsc && npm run rename-to-mjs && npm run fix-imports",
    "rename-to-mjs": "find dist -name '*.js' -exec sh -c 'mv \"$1\" \"${1%.js}.mjs\"' _ {} \\;",
    "fix-imports": "find dist -name '*.mjs' -exec sed -i '' 's/\\.js/\\.mjs/g' {} \\;",
    "clean": "rimraf dist",
    "start": "node dist/echo-agent.mjs",
    "client": "node dist/client.mjs"
  },
  "dependencies": {
    "@naylence/agent-sdk": "^0.3.3",
    "@types/node": "^22.10.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
